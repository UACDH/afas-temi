<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_navy_blue"
    tools:context="com.example.librarytemi.MainActivity"
    >

    <!-- White horizontal banner at the top -->
    <LinearLayout
        android:id="@+id/top_banner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp">

        <!-- Image on the top left corner -->

        <!-- Spacer to push links to the right -->

        <ImageView
            android:id="@+id/logo_image"
            android:layout_width="481dp"
            android:layout_height="186dp"
            android:contentDescription="@string/uaz_logo"
            android:src="@drawable/uaz_logo" />

        <View
            android:layout_width="1173dp"
            android:layout_height="187dp"
            android:layout_weight="1" />

        <!-- Links on the right side -->
        <TextView
            android:id="@+id/link1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_link"
            android:textColor="#0000FF"
            android:padding="8dp" />

        <TextView
            android:id="@+id/link2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support_link"
            android:textColor="#0000FF"
            android:padding="8dp" />

        <TextView
            android:id="@+id/link3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/support_link"
            android:textColor="#0000FF"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Table layout for buttons -->
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_banner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- First row of buttons -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Find Materials button -->
            <Button
                android:id="@+id/declare_button"
                style="@style/dashboard_button"
                android:text="@string/declare_major_minor"
                app:cornerRadius="30dp"
                app:strokeColor="#154A3A"
                app:strokeWidth="3dp" />

            <!-- Art Showcase Tour button -->
            <Button
                android:id="@+id/art_tour_button"
                style="@style/dashboard_button"
                android:text="@string/tour_art"
                app:cornerRadius="30dp"
                app:strokeColor="#154A3A"
                app:strokeWidth="3dp" />

            <!-- Faculty Tour button -->
            <Button
                android:id="@+id/faculty_tour_button"
                style="@style/dashboard_button"
                android:text="@string/faculty_tour"
                app:cornerRadius="30dp"
                app:strokeColor="#154A3A"
                app:strokeWidth="3dp" />

            <!-- Visit Faculty button -->
            <Button
                android:id="@+id/visit_faculty_button"
                style="@style/dashboard_button"
                android:text="@string/visit_faculty"
                app:cornerRadius="30dp"
                app:strokeColor="#154A3A"
                app:strokeWidth="3dp" />
        </TableRow>

        <!-- Second row of buttons -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>